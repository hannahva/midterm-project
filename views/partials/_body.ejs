<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <form method="post" action="/api/markers/"+marker.id+"?_method=PUT">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit this marker</h4>
            </div>
            <div class="modal-body">
                <!-- name input -->
              <div class="form-group">
                <label for="marker-name" class="col-2 col-form-label">Name</label>
                <div class="name-input">

                    <input name="title" class="form-control" type="text" value="marker name" id="marker-name">

                </div>
              </div>
              <!-- description input -->
              <div class="form-group">

                  <label for="marker-description">enter a description</label>
                  <textarea name="description" class="form-control" id="marker-description" rows="3"></textarea>

              </div>
              <!-- url/href input -->
              <div class="form-group">
              <label for="url-input" class="col-2 col-form-label">image url</label>
              <div class="url-input">

                  <input name="picture" class="form-control" type="url" value="enter link to image" id="url-input">

              </div>
              </div>
            </div>
            <div class="modal-footer">
                <input id="update-marker" type="submit" class="btn btn-default" value="make changes">
            </form>
<!--             <form method="post" action="/api/markers/" + marker.id + "?_method=DELETE">
              <input id="delete-marker" type="submit" onclick="" class="btn btn-default" value="delete marker">
            </form> -->

            </div>
        </div>

    </div>
