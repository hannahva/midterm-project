<% if (user) { %>
  <h1 class="location-edit-marker">Edit Marker</h1>
  <form action="/api/markers/<%= id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="marker-name">Marker name</label>
      <input type="text" class="form-control" id="marker-title" name="title" value="<%= title %>">
    </div>
    <div class="form-group">
      <label for="marker-description">Description</label>
      <input type="text" class="form-control" id="marker-description" name="description" value="<%= description %>">
    </div>
    <div class="form-group">
      <label for="marker-url">Picture Url</label>
      <input type="text" class="form-control" id="marker-picture" name="picture" placeholder="http://">
    </div>
    <button type="submit" class="btn btn-primary">Update Marker</button>
  </form>
  <br>
  <form action="/api/markers/<%= id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger" name="delete">Delete Marker</button>
  </form>

<% } %>

